            </div>
            <div class="form-group">
                <label asp-for="SearchCleaningFees" class="control-label"></label>
                <input type="radio" class="radio" asp-for="SearchCleaningFees" value="@SearchButtom.Lessthan" /> Less than
                <input type="radio" class="radio" asp-for="SearchCleaningFees" value="@SearchButtom.Greaterthan" /> Greater than<br />
            </div>
            <div class="form-group">
                <label asp-for="TotalCombinedRevenue" class="control-label"></label>
                <input asp-for="TotalCombinedRevenue" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="TotalCombinedRevenue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchCombinedRevenue" class="control-label"></label>
                <input type="radio" class="radio" asp-for="SearchCombinedRevenue" value="@SearchButtom.Lessthan" /> Less than
                <input type="radio" class="radio" asp-for="SearchCombinedRevenue" value="@SearchButtom.Greaterthan" /> Greater than<br />
            </div>
            <div class="form-group">
                <label asp-for="TotalCompletedReservations" class="control-label"></label>
                <input asp-for="TotalCompletedReservations" type="number" step="1" class="form-control" />
