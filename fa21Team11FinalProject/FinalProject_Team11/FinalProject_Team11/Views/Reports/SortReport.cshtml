            </div>
            <div class="form-group">
                <label asp-for="SearchCompletedReservations" class="control-label"></label>
                <input type="radio" class="radio" asp-for="SearchCompletedReservations" value="@SearchButtom.Lessthan" /> Less than
                <input type="radio" class="radio" asp-for="SearchCompletedReservations" value="@SearchButtom.Greaterthan" /> Greater than<br />
            </div>


            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

