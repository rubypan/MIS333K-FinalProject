@model FinalProject_Team11.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <table class="table table-hover table-striped table-sm">
        <thead>
            <tr>
                <th>Properties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Property cd in Model.Properties)
            {
                <tr>
                    <td>@cd.PropertyAddress</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoryID">Edit <i class="fas fa-edit"></i></a> |
    <a asp-action="Index">Back to List <i class="fas fa-arrow-circle-left"></i></a>
</div>
